<h1 class="mt-3">Fellows</h1>

<div class="row">
  <div class="col-lg-4 push-lg-8">
    <ul class="nav flex-column">
      <li class="nav-item">
        <%= link_to new_fellow_path, class: 'nav-link' do %>
          <i class="fa fa-plus" aria-hidden="true"></i> Create New Fellow
        <% end %>
      </li>

      <% if @fellows.any? %>
        <li class="nav-item">
          <span class="nav-link">
          <%= link_to fellows_path(format: 'csv'), 'data-toggle': 'tooltip', 'data-placement': 'right', title: pluralize(@fellows.count, 'row') do %>
            <i class="fa fa-download" aria-hidden="true"></i> Download as CSV
          <% end %>
          </span>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-lg-8 pull-lg-4">
    <% if @fellows.any? %>
      <ul class="list-group mt-3">
        <%= render @fellows %>
      </ul>
    <% else %>
      <p class="mt-3">
        There are no fellows registered under you.
        <%= link_to 'Add one?', new_fellow_path %>
      </p>
    <% end %>
  </div>
</div>
