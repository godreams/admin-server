<h1 class="mt-3">Forgot your password?</h1>

<div class="mt-4">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), layout: :horizontal, control_col: 'col-xl-4 col-lg-5', label_col: 'col-lg-2') do |f| %>
    <%= f.email_field :email, autofocus: true, label: 'Email address' %>

    <div class="form-group row">
      <div class="col-xl-4 col-lg-5 offset-lg-2">
        <%= f.submit 'Send me reset password instructions', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<hr>
<%= render 'devise/shared/links' %>
