<h1 class="mt-3">Change your password</h1>

<div class="mt-4">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, layout: :horizontal, control_col: 'col-xl-4 col-lg-5', label_col: 'col-lg-2') do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <% help_message = @minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : nil %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'off', help: help_message, label: 'New password' %>
    <%= f.password_field :password_confirmation, autocomplete: 'off', label: 'Confirm new password' %>

    <div class="form-group row">
      <div class="col-xl-4 col-lg-5 offset-lg-2">
        <%= f.submit 'Change my password', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<hr>
<%= render 'devise/shared/links' %>
