<h1 class="mt-3">New Volunteer</h1>

<div class="mt-3">
  <%= bootstrap_form_for @form, url: volunteers_path, layout: :horizontal do |f| %>
    <%= f.email_field :email, label: 'Email address', placeholder: 'volunteer@email.com', help: 'Email address of volunteer. An invite for signing up will be sent if this user does not exist.' %>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit 'Add / Invite', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
